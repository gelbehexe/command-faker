<?xml version="1.0"?>
<ruleset
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="PHP_CodeSniffer"
         xsi:noNamespaceSchemaLocation="https://github.com/squizlabs/PHP_CodeSniffer/raw/master/phpcs.xsd"
>
    <description>Local coding standards based on PSR2.</description>
    <file>.</file>
    <arg name="standard" value="PSR2"/>
    <arg name="report" value="full"/>
    <arg name="report-file" value="/var/www/html/.phpcs.report.log"/>
    <arg value="nv"/>
    <rule ref="PSR2" />

    <exclude-pattern>/var/www/html/vendor/</exclude-pattern>
    <exclude-pattern>/var/www/html/tests/resources/</exclude-pattern>
    <exclude-pattern>/var/www/html/archive</exclude-pattern>
    <exclude-pattern>/var/www/html/build</exclude-pattern>
    <exclude-pattern>/var/www/html/tmp</exclude-pattern>
</ruleset>